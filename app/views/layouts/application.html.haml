!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    %title gjcase
    = stylesheet_link_tag 'application' , media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .hidden
      %datalist#tags_datalist
        - Tag.active.each do |tag|
          %option{value: tag.name, "data-tag_id": tag.id.to_s}= tag.name

    %header.header-top.container-fluid
      .row.align-vertical
        .col-md-8
          %h1 gjcase
    %section.container-fluid
      - if notice.present?
        .alert.alert-success= notice

      = yield
